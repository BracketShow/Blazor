@page "/pourquoi-pas-blazor/{section:int}"

<SlideLayoutComponent>
    <SlideTitleFragment>
        <SlideTitle Title="Pourquoi pas ?"/>
    </SlideTitleFragment>
    <SlideBodyFragment>
        <BulletListComponent Section="@Section" Elements="@_elements"/>
    </SlideBodyFragment>
</SlideLayoutComponent>

@functions
{
    [Parameter]
    private int Section { get; set; }

    private readonly Dictionary<int, string> _elements = new Dictionary<int, string>
    {
        {1, "Changer de JS à .NET peut avoir un coût sur nos équipes de développement"},
        {2, "Poids des DLL dans le browser au premier chargement"},
        {3, "L’écosystème n’est peut-être pas encore à jour par rapport à l’offre en JS (plugins Angular par exemple)"}
    };

}