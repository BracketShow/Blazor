@page "/pourquoi-blazor/pourquoi/{section:int}"

<SlideLayoutComponent>
    <SlideTitleFragment>
        <SlideTitle Title="Pourquoi Blazor ?" />
    </SlideTitleFragment>
    <SlideBodyFragment>
        <BulletListComponent Section="@Section" Elements="@_elements"/>
    </SlideBodyFragment>
</SlideLayoutComponent>

@functions
{
    [Parameter]
    private int Section { get; set; }

    private readonly Dictionary<int, string> _elements = new Dictionary<int, string>
    {
        {1, "Du \"vrai\" <em>class-based OOP</em> au niveau du navigateur." },
        {2, "On bénéficie du côté <em>type-safe</em> de C#." },
        {3, "Mettre à profit les compétences existantes de nos développeurs en C#/Razor." },
        {4, "On évite la duplication de code et de modèles entre C# et Typescript/Javascript." },
        {5, "On n’utilise plus (ou presque) Javascript." },
    };
}